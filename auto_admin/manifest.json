{
    "manifest_version": 3,
    "name": "auto_login",
    "version": "1.0",
    "description": "auto_login",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "tabs",
      "contextMenus"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["images/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
        {
            "matches": ["http://*/login.asp"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }